{
    "random_seed": 1,
    "numpy_seed": 1,
    "pytorch_seed": 1,
    "train_data_path": "./data/train.txt",
    "validation_data_path": "./data/valid.txt",
    "dataset_reader": {
        "type": "spd_dataset_reader",
        "subj_clues_path": "./data/For Detecting sentiment polarity-Data 1/subjclueslen1-HLTEMNLP05.tff"
    },
    "model": {
        "type": "spd_model",
        "word_embeddings": {
            "type": "basic",
            "tokens": {
                "type": "embedding",
                "embedding_dim": 1
            },
            "clues": {
                "type": "embedding",
                "embedding_dim": 255
            }
        },
        "seq2seq_encoder": {
            "type": "multi_head_self_attention",
            "num_heads": 8,
            "input_dim": 256,
            "attention_dim": 64,
            "values_dim": 64
        },
        "seq2vec_encoder": {
            "type": "lstm",
            "input_size": 256,
            "hidden_size": 128,
            "bidirectional": true,
            "batch_first": true
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 64,
        "sorting_keys": [
            [
                "sentence",
                "num_tokens"
            ]
        ]
    },
    "trainer": {
        "num_epochs": 100,
        "optimizer": {
            "type": "adam",
            "lr": 0.0001
        },
        "patience": 10,
        "cuda_device": 1,
        "grad_clipping": 5.0,
        "validation_metric": "+accuracy"
    }
}